# Move certain applications to specific workspaces
for_window [class="libreoffice"] move container to workspace 7

# Enable floating mode for specific programs
for_window [class="Nm-connection-editor"] floating enable border normal 1
for_window [class="Hardinfo"] floating enable border normal 1
for_window [class="Pavucontrol"] floating enable border normal 1
for_window [class="Blueman-manager"] floating enable border normal 1
for_window [class="Rox-filer"] floating enable border normal 1
